{
  // Linting using ESLint.
  "eslint.validate": [
    "javascript",
    "typescript",
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  // Debugging.
  "debug.javascript.unmapMissingSources": true,
  "files.exclude": {
    "*[!test]**/node_modules": true
  },
  "search.exclude": {
    "**/build": true
  },
  // Ensure enough terminal history is preserved when running tests.
  "terminal.integrated.scrollback": 10000,
  // Configure todo-tree to exclude node_modules, dist, and compiled.
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules",
    "**/dist",
    "**/compiled"
  ],
  // Match TODO-APP in addition to other TODOs.
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "TODO-APP"
  ],
  // Disable TypeScript surveys.
  "typescript.surveys.enabled": false,
  "grammarly.selectors": [
    {
      "language": "markdown",
      "scheme": "file"
    }
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.words": [
    "Appium",
    "testrunner",
    "WDIO",
    "webdriver",
    "webdriverio"
  ],

  // Fix conflict between ESLint and Prettier.
  "prettier.enable": false,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint"
}
