{
  "name": "@wdio/mocha-framework",
  "version": "9.0.0-alpha.0",
  "description": "A WebdriverIO plugin. Adapter for Mocha testing framework.",
  "author": "Christian Bromann <mail@bromann.dev>",
  "homepage": "https://github.com/webdriverio/webdriverio/tree/main/packages/wdio-mocha-framework",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/webdriverio/webdriverio.git",
    "directory": "packages/wdio-mocha-framework"
  },
  "keywords": [
    "webdriver",
    "wdio",
    "wdio-reporter"
  ],
  "bugs": {
    "url": "https://github.com/webdriverio/webdriverio/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts"
    },
    "./common": {
      "import": "./build/common.js",
      "types": "./build/common.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./build/index.d.ts",
  "typeScriptVersion": "3.8.3",
  "scripts": {
    "build": "rimraf build && rollup -c",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" rollup -c --watch -m inline"
  },
  "dependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.28",
    "@wdio/logger": "workspace:9.0.0-alpha.0",
    "@wdio/types": "workspace:9.0.0-alpha.0",
    "@wdio/utils": "workspace:9.0.0-alpha.0",
    "mocha": "^10.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
